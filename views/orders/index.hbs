<h1>Would you look at all these pizzas?</h1>

<a href="/orders/add">You should get one too! (click here to order a pizza)</a>
<table class="table table-striped table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Type</th>
        <th>Size</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>
    {{#each tasks}}
        <tr>
            <td>{{ this.firstName }}</td>
            <td>{{ this.lastName }}</td>
            <td>{{ this.type }} </td>
            <td>{{ this.size }}</td>
            <td>{{ this.quantity }}</td>
            <td>{{ this.total }}</td>
            <td>
                <a href="/orders/edit/{{ this._id }}">Edit</a>
                <a href="/orders/delete/{{ this._id }}" class="text-danger delete">Delete</a>
            </td>
        </tr>
    {{/each}}
</table>